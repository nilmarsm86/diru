{% extends 'content.html.twig' %}

{% from 'macros/breadcrumb.html.twig' import breadcrumb %}
{% from 'macros/titles.html.twig' import h1 %}

{% block title %}Editar Planta{% endblock %}

{% block content %}
    <div class="row">
        {{ h1('Plantas', 'dinkie-icons:house-buildings-small') }}

        {{ breadcrumb([
            {label: 'Inicio', href: path('app_home')},
            {label: 'Plantas', href: path('app_building_index')},
            {label: 'Editar'},
        ]) }}
    </div>

    <h2 class="mb-4">Editar planta: {{ building.name }}</h2>

    {{ include('floor/_form.html.twig', {'showButton': true, title: title}) }}
{% endblock %}
