{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="municipality_detail_' ~ municipality.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_municipality_new',
            label: 'Nuevo',
            title: 'Nuevo municipio',
            entity: municipality,
            state: app.request.query.get('state') ? app.request.query.get('state') : 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Nombre:</th>
                    <td>{{ municipality.name }}</td>
                </tr>
                <tr>
                    <th>Provincia:</th>
                    <td>
                        <a href="{{ path('app_province_show', {'id': municipality.province.id }) }}">{{ municipality.province.name }}</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_municipality_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_municipality_edit', label: 'Editar', title:'Editar municipio'},
            delete: {href: 'app_municipality_delete', label: 'Eliminar', title:'Eliminar municipio'},
            id: municipality.id,
            message: 'Est√° seguro que desea eliminar el municipio?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


