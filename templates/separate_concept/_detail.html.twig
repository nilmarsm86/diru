{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="separate_concept_' ~ separate_concept.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_separate_concept_new',
            label: 'Nuevo',
            title: 'Nuevo concepto',
            entity: separate_concept,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Número:</th>
                    <td>{{ separate_concept.number }}</td>
                </tr>
                <tr>
                    <th>Nombre:</th>
                    <td>{{ separate_concept.name }}</td>
                </tr>
                <tr>
                    <th>Fórmula:</th>
                    <td>{{ separate_concept.formula }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_separate_concept_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_separate_concept_edit', label: 'Editar', title:'Editar concepto'},
            delete: {href: 'app_separate_concept_delete', label: 'Eliminar', title:'Eliminar concepto'},
            id: separate_concept.id,
            message: 'Está seguro que desea eliminar el concepto?',
            state: app.request.query.get('state') ? app.request.query.get('state') : 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


