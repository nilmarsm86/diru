{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: '',
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_gepographic_location_new',
            label: 'Nueva',
            title: 'Nueva ubicación geográfica',
            entity: geographic_location,
            state: 'form',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        {{ component('GeographicLocationForm', {modal:null, gl: geographic_location, ajax: ajax}) }}
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_geographic_location_index', label: 'Listado', title:'Volver al listado'},
            delete: {href: 'app_geographic_location_delete', label: 'Eliminar', title:'Eliminar ubicación geográfica'},
            id: geographic_location.id,
            message: 'Está seguro que desea eliminar la ubicación geográfica?',
            state: 'form',
            showButton: (showButton is defined and showButton == true) ? true : false,
            entity: geographic_location
        }) }}
    {% endblock %}

{% endcomponent %}
