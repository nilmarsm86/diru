{% extends 'content.html.twig' %}

{% from 'macros/breadcrumb.html.twig' import breadcrumb %}
{% from 'macros/titles.html.twig' import h1 %}

{% block title %}Gestión de usuarios y roles{% endblock %}

{% block content %}
    <div class="row">
        {{ h1('Seguridad', 'bi:lock') }}

        {{ breadcrumb([
            {label: 'Inicio', href: path('app_home')},
            {label: 'Seguridad'},
        ]) }}
    </div>

    {#    <div class="row"> #}
    <h2 class="mb-4">Gestión de usuarios y roles</h2>
    {% embed "embeds/card.html.twig" %}
        {% from 'macros/buttons.html.twig' import tableHeaderButton %}

        {% block card_css_class %}mb-4{% endblock %}
        {#        {% block card_extra %}style="background-color: var(--bs-secondary-bg);"{% endblock %} #}

        {% block card_header_css_class %}d-flex justify-content-between align-items-center{% endblock %}

        {% block card_header_options %}
            {{ tableHeaderButton(path('user_list'), 'uiw:reload', '', 'Resetear', 'btn-link text-decoration-none') }}
        {% endblock %}

        {% block card_title %}Usuarios y roles{% endblock %}

        {% block card_body %}
            {% embed "embeds/table.html.twig" %}
                {% block table_container %}
                    data-action="
                    user-role:startChange->table#showBackdrop
                    user-role:endChange->table#hideBackdrop
                    "
                {% endblock %}

                {% block table_head %}
                    <tr>
                        {% if app.user.isAdmin() %}
                            <th></th>
                        {% endif %}
                        <th>Nombre y Apellidos</th>
                        <th>Usuario</th>
                        {% for role in roles %}
                            {% if role.isSuperAdmin() == false %}
                                <th>{{ role.capitalizeName() }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                {% endblock %}

                {% block table_body %}
                    {% for user in paginator.getData() %}
                        {% if user.isSuperAdmin() == false %}
                            <tr {{ stimulus_controller('user-role', {
                                'user':user.id,
                                'urlState':path('user_state'),
                                'urlAddRole':path('add_role'),
                                'urlRemoveRole':path('remove_role')
                            }) }}>
                                <td>
                                    {% if app.user.isAdmin() %}
                                        <div class="form-check form-switch">
                                            <input
                                                    class="form-check-input"
                                                    type="checkbox"
                                                    {{ stimulus_action('user-role', 'onChangeState', 'change') }}
                                                    role="switch"
                                                    title="{% if user.isActive() %}activo{% else %}inactivo{% endif %}"
                                                    {% if user.isActive() %}checked{% endif %}
                                            >
                                        </div>
                                    {% endif %}
                                </td>
                                <td>{{ user.getFullName() }}</td>
                                <td>{{ user.username }}</td>
                                {% for role in roles %}
                                    {% if role.isSuperAdmin() == false %}
                                        <td>
                                            <div class="form-check">
                                                <input
                                                        type="checkbox"
                                                        title="{% if user.isActive() %}quitar{% else %}asignar{% endif %} permisos"
                                                        {{ stimulus_action('user-role', 'onChangeRole', 'change') }}
                                                        {% if role.name is same as constant('ROLE_CLIENT', role) %}
                                                            class="client"
                                                        {% endif %}
                                                        {% if user.isActive == false or (role.name is same as constant('ROLE_CLIENT', role)) %}
                                                            disabled
                                                        {% else %}
                                                            {% if app.user.isSuperAdmin() == false and (role.blockChange() or user.blockRoles()) %}disabled{% endif %}
                                                        {% endif %}
                                                        {% if user.hasRole(role) %}checked{% endif %}
                                                        value="{{ role.id }}"
                                                >
                                            </div>
                                        </td>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="7">
                                No se encontraron registros
                            </td>
                        </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}
    {#    </div> #}
{% endblock %}


