{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="land_detail_' ~ land.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_land_new',
            label: 'Nuevo',
            title: 'Nuevos datos del terreno',
            entity: land,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>LandArea</th>
                    <td>{{ land.landArea }}</td>
                </tr>
                <tr>
                    <th>OccupiedArea</th>
                    <td>{{ land.occupiedArea }}</td>
                </tr>
                <tr>
                    <th>Perimeter</th>
                    <td>{{ land.perimeter }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ land.photo }}</td>
                </tr>
                <tr>
                    <th>Microlocalization</th>
                    <td>{{ land.microlocalization }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_land_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_land_edit', label: 'Editar', title:'Editar datos del terreno'},
            delete: {href: 'app_land_delete', label: 'Eliminar', title:'Eliminar datos del terreno'},
            id: land.id,
            message: 'Est√° seguro que desea eliminar los datos del terreno?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


