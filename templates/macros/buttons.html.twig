{% macro tableActionButton(path, icon, label='', title='', dataAction='page#showFormContent', cssClass='btn-primary') %}
    <a class="btn btn-sm {{ cssClass }}" title="{{ title }}"
       href="{{ path }}"
       data-action="{{ dataAction }}"
    >
        {{ ux_icon(icon, {class:'bi'}) }}
        {{ label }}
    </a>
{% endmacro %}

{% macro tableActionButton2(path, icon, label='', title='', dataAction='', dataLiveActionParam='', cssClass='btn-primary') %}
    <a class="btn btn-sm {{ cssClass }}" title="{{ title }}"
       href="{{ path }}"
            {#       data-action="{{ dataAction }}" #}
       data-action="{{ dataAction }}"
       data-live-action-param="{{ dataLiveActionParam }}"
       data-live-url-param="{{ path }}"
    >
        {{ ux_icon(icon, {class:'bi'}) }}
        {{ label }}
    </a>
{% endmacro %}

{% macro tableActionButton3(path, icon='', label='', title='', action='', cssClass='btn-primary', badge=false) %}
    <a class="btn btn-sm position-relative {{ cssClass }}" title="{{ title }}"
       href="{{ path }}"
            {{ action|raw }}
    >
        {% if badge %}
            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
            </span>
        {% endif %}
        {% if icon %}
            {{ ux_icon(icon, {class:'bi'}) }}
        {% endif %}
        {{ label }}
    </a>
{% endmacro %}


{% macro deleteFormButton(path, icon, token, label='', title='', confirm='Esta seguro que desea borrarlo?') %}
    <form method="post" action="{{ path }}"
          onsubmit="return confirm('{{ confirm }}');" style="display: inline">
        <input type="hidden" name="_token" value="{{ csrf_token(token) }}">
        <button class="btn btn-sm btn-danger" title="{{ title }}">
            {{ ux_icon(icon, {class:'bi'}) }}
            {{ label }}
        </button>
    </form>
{% endmacro %}

