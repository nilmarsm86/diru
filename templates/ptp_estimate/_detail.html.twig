{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="ptp_estimate_detail_' ~ ptp_estimate.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_ptp_estimate_new',
            label: 'Nueva',
            title: 'Nueva estimación de proyecto y preparación técnica',
            entity: ptp_estimate,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Concepto:</th>
                    <td>{{ ptp_estimate.concept }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_ptp_estimate_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_ptp_estimate_edit', label: 'Editar', title:'Editar estimado de urbanización'},
            delete: {href: 'app_ptp_estimate_delete', label: 'Eliminar', title:'Eliminar estimado de urbanización'},
            id: ptp_estimate.id,
            message: 'Está seguro que desea eliminar el estimado de urbanización?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


