<div {{ attributes.defaults(stimulusController('live-form', {modal:modal})) }}>

{#    {% form_theme form 'form/bootstrap_5_horizontal_layout_sm.html.twig' %}#}

    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'save'
        }
    }) }}

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.code) }}
        </div>
        <div class="col">
            {{ form_row(form.data) }}
        </div>
    </div>

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.measurementUnit) }}
        </div>
        <div class="col">
            {{ form_row(form.type) }}
        </div>
    </div>

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.legalReference) }}
        </div>
        <div class="col">
            {{ form_row(form.photo) }}
        </div>
    </div>

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.description) }}
        </div>
        <div class="col">
            {{ form_row(form.comment) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-12">
            {{ component('button:submit', {
                icon: (entity.id is null) ? 'bi:plus-lg' : 'fa:edit',
                label: (entity.id is null) ? 'Agregar' : 'Modificar',
                component: this
            }) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>

{{ include('partials/modal/_modal_load.html.twig') }}
