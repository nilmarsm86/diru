{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: '',
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: '',
            label: '',
            title: '',
            entity: local,
            state: 'form',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        {{ component('LocalForm', {modal:null, l: local, ajax: ajax, subSystem:sub_system}) }}
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {},
            delete: {},
            id: local.id,
            message: 'Est√° seguro que desea eliminar el local?',
            state: 'form',
            showButton: (showButton is defined and showButton == true) ? true : false,
            entity: local
        }) }}
    {% endblock %}

{% endcomponent %}