{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="building_revision_' ~ building_revision.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_building_revision_new',
            label: 'Nueva',
            title: 'Nueva revisión',
            entity: building_revision,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Comentarios:</th>
                    <td>{{ building_revision.comment }}</td>
                </tr>
                <tr>
                    <th>Fecha:</th>
                    <td>{{ building_revision.createdAt }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_building_revision_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_building_revision_edit', label: 'Editar', title:'Editar revisión'},
            delete: {href: 'app_building_revision_delete', label: 'Eliminar', title:'Eliminar revisión'},
            id: building_revision.id,
            message: 'Está seguro que desea eliminar la revisión?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


