{% extends 'content.html.twig' %}

{% from 'macros/breadcrumb.html.twig' import breadcrumb %}
{% from 'macros/titles.html.twig' import h1 %}

{% block title %}Subsistemas {% if reply %}replicados{% endif %}{% endblock %}

{% block content %}
    <div class="row">
        {% if reply %}
            {{ h1('Subsistemas replicados', 'ix:building-block-filled') }}
        {% else %}
            {{ h1('Subsistemas', 'ix:building-block-filled') }}
        {% endif %}

        {{ breadcrumb([
            {label: 'Inicio', href: path('app_home')},
            {label: 'Subsistemas'},
        ]) }}
    </div>

    <h2 class="mb-4">
        Subsistemas {% if reply %}replicados{% endif %} de: {{ floor.name }}
    </h2>

    {% component ManagePage %}
        {% block list %}
            {{ include('sub_system/_list.html.twig') }}
        {% endblock %}
    {% endcomponent %}
{% endblock %}
