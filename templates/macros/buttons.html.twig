            class="btn btn-success btn-sm {% if component %} {# component.hasValidationErrors ? 'disabled' : '' #} {% endif %}">
        {{ ux_icon(icon, {class:'bi'}) }}
        {{ label }}
    </button>
{% endmacro %}

