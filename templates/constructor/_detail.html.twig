{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="constructor_detail_' ~ constructor.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_constructor_new',
            label: 'Nueva',
            title: 'Nueva constructora',
            entity: constructor,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Nombre:</th>
                    <td>{{ constructor.name }}</td>
                </tr>
                <tr>
                    <th>Código:</th>
                    <td>{{ constructor.code }}</td>
                </tr>
                <tr>
                    <th>País:</th>
                    <td>{{ constructor.country }}</td>
                </tr>
                <tr>
                    <th>Provincia:</th>
                    <td>
                        {# TODO: refactoraizar #}
                        <a href="{{ path('app_province_show', {'id': constructor.municipality.province.id }) }}">
                            {{ constructor.getProvinceName() }} {{ ux_icon('bx:link-external', {class:'bi'}) }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>Municipio:</th>
                    <td>
                        {# TODO: refactoraizar #}
                        <a href="{{ path('app_municipality_show', {'id': constructor.municipality.id }) }}">
                            {{ constructor.getMunicipalityName() }} {{ ux_icon('bx:link-external', {class:'bi'}) }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <th>Dirección:</th>
                    <td>{{ constructor.street }}</td>
                </tr>
                <tr>
                    <th>Logo:</th>
                    <td>{{ constructor.logo }}</td>
                </tr>
                {{ include('building/_buildings.html.twig', {'entity': constructor}) }}
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_constructor_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_constructor_edit', label: 'Editar', title:'Editar constructora'},
            delete: {href: 'app_constructor_delete', label: 'Eliminar', title:'Eliminar constructora'},
            id: constructor.id,
            message: 'Está seguro que desea eliminar la constructora?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


