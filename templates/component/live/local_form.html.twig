<div {{ attributes.defaults(stimulusController('live-form', {modal:modal})) }}>

    {#    {% form_theme form 'form/bootstrap_5_horizontal_layout_sm.html.twig' %} #}

    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'save'
        }
    }) }}

    {% if form_errors(form) %}
        {{ form_errors(form) }}
    {% endif %}

    {% dump(form_errors(form.area)) %}

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>

        <div class="col">
            {{ form_row(form.number) }}
        </div>
    </div>

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.area) }}
        </div>

        <div class="col">
            {{ form_row(form.height) }}
        </div>
    </div>

    <div class="mb-0 row">
        <div class="col">
            {{ form_row(form.type) }}
        </div>

        <div class="col">
            {{ form_row(form.technicalStatus) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-12">
            {{ component('button:submit', {
                icon: (this.l.id is null) ? 'bi:plus-lg' : 'fa:edit',
                label: (this.l.id is null) ? 'Agregar' : 'Modificar',
                component: this
            }) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
