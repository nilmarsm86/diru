{% extends 'base.html.twig' %}

{% block title %}Building index{% endblock %}

{% block body %}
    <h1>Building index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EstimatedValueConstruction</th>
                <th>EstimatedValueEquipment</th>
                <th>EstimatedValueOther</th>
                <th>ApprovedValueConstruction</th>
                <th>ApprovedValueEquipment</th>
                <th>ApprovedValueOther</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for building in buildings %}
            <tr>
                <td>{{ building.id }}</td>
                <td>{{ building.estimatedValueConstruction }}</td>
                <td>{{ building.estimatedValueEquipment }}</td>
                <td>{{ building.estimatedValueOther }}</td>
                <td>{{ building.approvedValueConstruction }}</td>
                <td>{{ building.approvedValueEquipment }}</td>
                <td>{{ building.approvedValueOther }}</td>
                <td>{{ building.name }}</td>
                <td>
                    <a href="{{ path('app_building_show', {'id': building.id}) }}">show</a>
                    <a href="{{ path('app_building_edit', {'id': building.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_building_new') }}">Create new</a>
{% endblock %}
