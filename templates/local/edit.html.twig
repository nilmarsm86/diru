{% extends 'content.html.twig' %}

{% from 'macros/breadcrumb.html.twig' import breadcrumb %}
{% from 'macros/titles.html.twig' import h1 %}

{% block title %}Editar Local{% endblock %}

{% block content %}
    <div class="row">
        {{ h1('Local') }}

        {{ breadcrumb([
            {label: 'Inicio', href: path('app_home')},
            {label: 'Local', href: path('app_local_index', {'floor': floor.id})},
            {label: 'Editar'},
        ]) }}
    </div>

    <h2 class="mb-4">Editar local: {{ floor.name }}</h2>

    {{ include('local/_form.html.twig', {'showButton': true, title: title}) }}
{% endblock %}
