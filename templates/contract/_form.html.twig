{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: '',
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_contract_new',
            label: 'Nuevo',
            title: 'Nuevo contrato',
            entity: contract,
            state: 'form',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        {{ component('ContractForm', {modal:null, con: contract, ajax: ajax}) }}
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_contract_index', label: 'Listado', title:'Volver al listado'},
            delete: {href: 'app_contract_delete', label: 'Eliminar', title:'Eliminar contract'},
            id: contract.id,
            message: 'Est√° seguro que desea eliminar el contrato?',
            state: 'form',
            showButton: (showButton is defined and showButton == true) ? true : false,
            entity: contract
        }) }}
    {% endblock %}

{% endcomponent %}
