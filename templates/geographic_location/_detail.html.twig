{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="geographic_location_detail_' ~ geographic_location.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_geographic_location_new',
            label: 'Nueva',
            title: 'Nueva ubicación geográfica',
            entity: geographic_location,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Nombre:</th>
                    <td>{{ geographic_location.name }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_geographic_location_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_geographic_location_edit', label: 'Editar', title:'Editar ubicación geográfica'},
            delete: {href: 'app_geographic_location_delete', label: 'Eliminar', title:'Eliminar ubicación geografica'},
            id: geographic_location.id,
            message: 'Está seguro que desea eliminar la ubicación geográfica?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


