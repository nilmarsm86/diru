{% if app.request.query.get('modal') %}
    {{ component('ProjectTechnicalPreparationEstimateForm', {modal:app.request.query.get('modal'), ue: ptp_estimate, ajax: ajax, building:building}) }}
{% else %}

    {% component 'Card:Card' with {
        cssClass: 'mb-4',
        extra: '',
        headerCssClass: 'd-flex justify-content-between align-items-center',
        title: title
    } %}

        {% block header %}
            {{ include('partials/_card_header_options.html.twig', {
                goTo: 'app_ptp_estimate_new',
                label: 'Nueva',
                title: 'Nueva estimación de proyecto y preparación técnica',
                entity: ptp_estimate,
                state: 'form',
                showButton: (showButton is defined and showButton == true) ? true : false
            }) }}
        {% endblock %}

        {% block body %}
            {{ component('ProjectTechnicalPreparationEstimateForm', {modal:null, ue: ptp_estimate, ajax: ajax, building:building}) }}
        {% endblock %}

        {% block footer %}
            {{ include('partials/_card_footer.html.twig', {
                list: {href: 'app_ptp_estimate_index', label: 'Listado', title:'Volver al listado'},
                delete: {href: 'app_ptp_estimate_delete', label: 'Eliminar', title:'Eliminar estimado de urbanización'},
                id: ptp_estimate.id,
                message: 'Está seguro que desea eliminar el estimado de proyecto y preparación técnica?',
                state: 'form',
                showButton: (showButton is defined and showButton == true) ? true : false,
                entity: ptp_estimate
            }) }}
        {% endblock %}

    {% endcomponent %}
{% endif %}
