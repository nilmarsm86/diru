{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="contract_detail_' ~ contract.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_contract_new',
            label: 'Nuevo',
            title: 'Nuevo contrato',
            entity: contract,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Código:</th>
                    <td>{{ contract.code }}</td>
                </tr>
                <tr>
                    <th>Año:</th>
                    <td>{{ contract.year }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_contract_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_contract_edit', label: 'Editar', title:'Editar contrato'},
            delete: {href: 'app_contract_delete', label: 'Eliminar', title:'Eliminar contrato'},
            id: contract.id,
            message: 'Está seguro que desea eliminar el contrato?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


