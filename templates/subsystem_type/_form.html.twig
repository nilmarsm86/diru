{% if app.request.query.get('modal') %}
    {{ component('SubsystemTypeForm', {modal:app.request.query.get('modal'), sst: subsystem_type, ajax: ajax}) }}
{% else %}

    {% component 'Card:Card' with {
        cssClass: 'mb-4',
        extra: '',
        headerCssClass: 'd-flex justify-content-between align-items-center',
        title: title
    } %}

        {% block header %}
            {{ include('partials/_card_header_options.html.twig', {
                goTo: 'app_subsystem_type_new',
                label: 'Nuevo',
                title: 'Nuevo tipo',
                entity: subsystem_type,
                state: 'form',
                showButton: (showButton is defined and showButton == true) ? true : false
            }) }}
        {% endblock %}

        {% block body %}
            {{ component('SubsystemTypeForm', {modal:null, sst: subsystem_type, ajax: ajax}) }}
        {% endblock %}

        {% block footer %}
            {{ include('partials/_card_footer.html.twig', {
                list: {href: 'app_subsystem_type_index', label: 'Listado', title:'Volver al listado'},
                delete: {href: 'app_subsystem_type_delete', label: 'Eliminar', title:'Eliminar tipo'},
                id: subsystem_type.id,
                message: 'Est√° seguro que desea eliminar el tipo?',
                state: 'form',
                showButton: (showButton is defined and showButton == true) ? true : false,
                entity: subsystem_type
            }) }}
        {% endblock %}

    {% endcomponent %}
{% endif %}
