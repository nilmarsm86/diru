{% extends 'content.html.twig' %}

{% from 'macros/breadcrumb.html.twig' import breadcrumb %}
{% from 'macros/titles.html.twig' import h1 %}

{% block title %}Plantas{% endblock %}

{% block content %}
    <div class="row">
        {% if reply %}
            {{ h1('Plantas Replicadas', 'dinkie-icons:house-buildings-small') }}
        {% else %}
            {{ h1('Plantas', 'dinkie-icons:house-buildings-small') }}
        {% endif %}

        {{ breadcrumb([
            {label: 'Inicio', href: path('app_home')},
            {label: (reply) ? 'Plantas replicadas' : 'Plantas'},
        ]) }}
    </div>

    <h2 class="mb-4">
        Inmueble {% if reply %}replicado{% endif %} {% if building.isNew() %}nuevo{% else %}existente{% endif %}: {{ building.name }}
    </h2>

    {% component ManagePage %}
        {% block list %}
            {{ include('floor/_list.html.twig') }}
        {% endblock %}
    {% endcomponent %}
{% endblock %}
