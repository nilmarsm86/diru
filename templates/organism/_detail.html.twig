{% component 'Card:Card' with {
    cssClass: 'mb-4',
    extra: 'id="organism_detail_' ~ organism.id,
    headerCssClass: 'd-flex justify-content-between align-items-center',
    title: title,
} %}

    {% block header %}
        {{ include('partials/_card_header_options.html.twig', {
            goTo: 'app_organism_new',
            label: 'Nuevo',
            title: 'Nuevo organism',
            entity: organism,
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

    {% block body %}
        <div class="table-responsive table mt-2" role="grid" aria-describedby="dataTable_info">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Nombre:</th>
                    <td>{{ organism.name }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}

    {% block footer %}
        {{ include('partials/_card_footer.html.twig', {
            list: {href: 'app_organism_index', label: 'Listado', title:'Volver al listado'},
            edit: {href: 'app_organism_edit', label: 'Editar', title:'Editar organismo'},
            delete: {href: 'app_organism_delete', label: 'Eliminar', title:'Eliminar organismo'},
            id: organism.id,
            message: 'Est√° seguro que desea eliminar el organismo?',
            state: 'detail',
            showButton: (showButton is defined and showButton == true) ? true : false
        }) }}
    {% endblock %}

{% endcomponent %}


